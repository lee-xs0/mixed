{
  "npmClient": "pnpm",
  "version": "independent",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "npmClient": "pnpm",
      "verifyAccess": false,
      "version": {
        "conventionalCommits": true
      },
      "ignoreChanges": ["*.md", "**/test/**"],
      "message": "chore(release): publish"
    }
  }
}
